<%- include('partials/header', {pageTitle: "Pokemon Game"}) %>

<h1 class="text-center">Welcome to the Pokemon Game!</h1>
<div class="text-center d-inline-flex gap-1">
  <button type="button" class="btn btn-light active" id="lightMode">Light Mode</button>
  <button type="button" class="btn btn-dark" id="darkMode">Dark Mode</button>
</div><br><br>
<div class="text-center mb-4">
  <button class="btn btn-info active" id="easyBtn">Easy</button>
  <button class="btn btn-warning" id="mediumBtn">Medium</button>
  <button class="btn btn-danger" id="hardBtn">Hard</button><br>
  <button class="btn btn-success" id="startBtn">Start Game</button><br><br>
  <span class="text-muted" id="timer">Time Remaining: 0</span>
  <button class="btn btn-secondary" id="resetBtn">Reset</button><br><br>
  <div id="status" class="container">
    <span class="text-muted" id="clicks">Clicks Made: 0</span><br>
    <span class="text-muted" id="matches">Matches Made: 0</span><br>
    <span class="text-muted" id="matchStreak">Matches Streak: 0</span><br>
    <span class="text-muted" id="matchesLeft">Matches Left: 0</span><br>
    <span class="text-muted" id="totalMatches">Total Matches: 0</span><br>
  </div>
</div>
<img src="loading_1.gif" alt="Loading..." id="loading" class="loading img-fluid" style="display: none;">
<div class="container d-none" id="pokemonList"></div>
<div class="container text-center" id="pokemonGrid"></div>
<template id="pokemonTemplate">
  <button class="card back_face">
    <img class="front_face" src="" alt="A pokemon card">
    <img class="back_face" src="back.webp" alt="A pokemon card back">
  </button>
</template>
<%- include('partials/footer', {scripts: ["index.js"]}) %>